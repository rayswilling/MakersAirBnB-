<form action="/spaces" method="post">
  <input type="text" name="name" placeholder="Name">
  <input type="text" name="description" placeholder="Description">
  <input type="text" name="price" placeholder="Price">
  <label for="arrival">Available from:</label>
  <input type="date" name="available_from" min="2019-01-01" max="2030-12-31">
  <label for="departure">Available until:</label>
  <input type="date" name="available_until" min="2019-01-02" max="2030-12-31">
  <input type="submit" value="Submit">
</form>